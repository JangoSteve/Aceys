!!!
%html
  %head
    %title The Acey Awards - Sponsored by Alfa Jango, LLC
    %link{:href => '/master.css', :rel => 'stylesheet', :type => 'text/css'}
    %link{:href => '/jquery.autocomplete.css', :rel => 'stylesheet', :type => 'text/css'}
    %link{:href => '/jquery.datatables.css', :rel => 'stylesheet', :type => 'text/css'}
    %link{:href => '/jquery.jqplot.min.css', :rel => 'stylesheet', :type => 'text/css'}

    %script{:src => '/jquery-1.4.4.min.js', :type => 'text/javascript'}
    %script{:src => '/jquery.autocomplete.min.js', :type => 'text/javascript'}
    %script{:src => '/jquery.dataTables.min.js', :type => 'text/javascript'}

    /[if IE]
      %script{:src => '/excanvas.min.js', :type => 'text/javascript'}

    %script{:src => '/jquery.jqplot.min.js', :type => 'text/javascript'}

    %script{:src => '/master.js', :type => 'text/javascript'}

    = yield_content :js_setup
    :javascript
      WebFontConfig = {
        google: { families: [ 'Josefin Sans','Schoolbell','Lekton','Neucha','Gruppo','Just Me Again Down Here' ] }
      };
      (function() {
        var wf = document.createElement('script');
        wf.src = ('https:' == document.location.protocol ? 'https' : 'http') +
            '://ajax.googleapis.com/ajax/libs/webfont/1/webfont.js';
        wf.type = 'text/javascript';
        wf.async = 'true';
        var s = document.getElementsByTagName('script')[0];
        s.parentNode.insertBefore(wf, s);
      })();

      $(document).ready(function(){
        #{ yield_content :document_ready }
      });

  %body
    #wrapper
      #border-top
        .contained
          = yield_content :header
      #container
        = yield
      #push
    #footer
      %p
        *The Acey Awards has no official affiliation with
        %a{:href => 'http://ace-event.org'} ACE event
        or its organizers.
        Created and sponsored by
        %a{:href => 'http://www.alfajango.com'} Alfa Jango, LLC.
